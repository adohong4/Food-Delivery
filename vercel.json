{
    "version": 2,
    "projects": [
        {
            "name": "frontend",
            "src": "frontend/",
            "routes": [
                {
                    "src": "/(.*)",
                    "dest": "/frontend/$1"
                }
            ]
        },
        {
            "name": "admin",
            "src": "admin/",
            "routes": [
                {
                    "src": "/(.*)",
                    "dest": "/admin/$1"
                }
            ]
        },
        {
            "name": "backend",
            "src": "backend/",
            "functions": "api",
            "builds": [
                {
                    "src": "server.js",
                    "use": "@vercel/node"
                }
            ],
            "routes": [
                {
                    "src": "/api/(.*)",
                    "dest": "/server.js"
                }
            ]
        }
    ]
}